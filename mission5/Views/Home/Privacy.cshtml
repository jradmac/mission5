@{
    ViewData["Title"] = "Pricing";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Service Pricing Calculator</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 50px;
            background-color: #f4f4f4;
        }
        .container {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            display: inline-block;
        }
        label, select, input {
            font-size: 18px;
            margin: 10px;
        }
        #price {
            font-size: 32px;
            font-weight: bold;
            color: green;
            margin-top: 20px;
        }
    </style>
</head>
<body>
<div class="container">
    <h2>Service Pricing Calculator</h2>
    <label for="service">Select Service:</label>
    <select id="service" onchange="calculatePrice()">
        <option value="automation">Automation</option>
        <option value="ai">A.I.</option>
        <option value="web">Web Development</option>
    </select>
    <br>
    <label for="hours">Enter Hours:</label>
    <input type="number" id="hours" min="1" oninput="calculatePrice()">
    <br>
    <div id="price">$0.00</div>
</div>

<script>
    function calculatePrice() {
        let service = document.getElementById("service").value;
        let hours = parseInt(document.getElementById("hours").value) || 0;
        let rate = 0;

        if (service === "automation") {
            rate = 50;
        } else if (service === "ai") {
            rate = 30;
        } else if (service === "web") {
            rate = 100;
        }

        let total = rate * hours;
        document.getElementById("price").innerText = `$${total.toFixed(2)}`;
    }
</script>
</body>
</html>
